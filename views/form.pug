extends layout

block content
    if errors
        ul  
            for error in errors
                li = error.msg

form(action="." method="POST")
    label(for="name") Name:
    input(
        type="text"
        id="name"
        name="name"
        value=data.name
    )
    label(for="email") Email:
    input(
        type="text"
        id="email"
        name="email"
        value=data.eamil
    )
    input(type="submit" value="Submit")